<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.xxx.Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>arrive</servlet-name>
        <servlet-class>com.xxx.Controller.ArrivedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>arrive</servlet-name>
        <url-pattern>/arrive</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>saveImage</servlet-name>
        <servlet-class>com.xxx.Controller.SaveImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saveImage</servlet-name>
        <url-pattern>/saveImage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>com.xxx.Controller.PasswordChangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Service</servlet-name>
        <servlet-class>com.xxx.Controller.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Service</servlet-name>
        <url-pattern>/Service</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetMessage</servlet-name>
        <servlet-class>com.xxx.Controller.GetMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMessage</servlet-name>
        <url-pattern>/getmessage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendMessage</servlet-name>
        <servlet-class>com.xxx.Controller.SendMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMessage</servlet-name>
        <url-pattern>/sendmessage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllEmployeeForManager</servlet-name>
        <servlet-class>com.xxx.Controller.GetAllEmployeeForManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllEmployeeForManager</servlet-name>
        <url-pattern>/getEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllMessageForManager</servlet-name>
        <servlet-class>com.xxx.Controller.GetAllMessageForManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllMessageForManager</servlet-name>
        <url-pattern>/getAllMessage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdataEmployee</servlet-name>
        <servlet-class>com.xxx.Controller.UpdataEmployeeInformation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdataEmployee</servlet-name>
        <url-pattern>/updataEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendResponse</servlet-name>
        <servlet-class>com.xxx.Controller.SendResponseToEmployee</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendResponse</servlet-name>
        <url-pattern>/sendResponse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>com.xxx.Controller.AddEmployees</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>
</web-app>